<%= content_tag component.tag_name, component.html_options do %>
  <div class="name"><%= component.name %></div>
  <% if component.params %>
    <div class="params"></div>
  <% end %>
  <% if component.tags && component.tags.size > 0 %>
    <% component.tags.each do |tag| %>
      <div class="tag"><%= tag %></div>
    <% end %>
  <% end %>
<% end %>
