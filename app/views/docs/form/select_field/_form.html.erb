<%= tao_form person, url: docs_form_persons_path(form_tpl: 'docs/form/boolean_field/form'),
  html: {:class => 'person-form'}, remote: true do |f| %>

  <fieldset>
    <legend>Select</legend>
    <% colors = ['red', 'orange', 'yellow', 'green', 'blue', 'indigo', 'violet', 'purple', 'brown', 'black', 'grey', 'white'] %>
    <%= f.input :colors, as: :select, collection: colors, selected: 'blue' %>
    <%= f.input :city, as: :grouped_select, remote: {
      url: docs_form_cities_path,
      searchKey: 'name_cont',
      totalOptionSize: 10
    } %>
  </fieldset>

  <fieldset>
    <legend>Multiple Select</legend>
    <% colors = ['red', 'orange', 'yellow', 'green', 'blue', 'indigo', 'violet', 'purple', 'brown', 'black', 'grey', 'white'] %>
    <%= f.input :colors, as: :select, collection: colors, multiple: true, selected: ['red', 'blue'] %>
    <%= f.input :city, as: :grouped_select, remote: {
      url: docs_form_cities_path,
      searchKey: 'name_cont',
      totalOptionSize: 10
    }, multiple: true %>
  </fieldset>

  <fieldset>
    <legend>Checkbox Group</legend>
    <%= f.input :colors, as: :check_boxes, collection: colors %>
  </fieldset>

  <fieldset>
    <legend>Radio Button Group</legend>
    <%= f.input :gender, as: :radio_buttons, collection: [:male, :female] %>
  </fieldset>
<% end %>
